{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "no-console": "off",
        "indent": ["error", 2],
        "comma-dangle": ["error", "never"],
        "linebreak-style": ["error", "windows"],
        "no-use-before-define": ["error", {
            "functions": false
        }]
    },
    "ignorePatterns": ["/dist/"]
} 
